@{
    ViewData["Title"] = "Home Page";
}
@model Survey
<form asp-action="Submission" asp-controller="Home" method="post">
<div class="text-center">
    <div class="form-group">Your Name: 
        <label asp-for="YourName"></label>
        <span asp-validation-for="YourName" class="tect-danger"></span>
        <input asp-for="YourName" class="form-control">
    </div>
    <div class="form-group">Dojo Location :
        <select asp-for="DojoLocation" class="form-control">
            <option value="1">Tunis</option>
            <option value="2">Sfax</option>
            <option value="3">Bizerte</option>
            <option value="4">Monastir</option>
            <option value="5">Sousse</option>
            <span asp-validation-for="DojoLocation" class="tect-danger"></span>
        </select>
    </div>
    <div class="form-group">Favorite Language: 
        <select asp-for="FavLanguage" class="form-control">
            <option value="1">Python</option>
            <option value="2">Javascript</option>
            <option value="3">C</option>
            <option value="4">C#</option>
            <option value="5">Java</option>
            <option value="6">PHP</option>
            <span asp-validation-for="FavLanguage" class="tect-danger"></span>
            @* <input asp-for="FavLanguage" class="form-control"> *@
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea class="form-control"></textarea>
        <span asp-validation-for="Comment" class="tect-danger"></span>
        @* <input asp-for="Comment" class="form-control"> *@
    </div>
    <input type="submit" value="Submit" class="btn btn-succes">
</div>
</form>
